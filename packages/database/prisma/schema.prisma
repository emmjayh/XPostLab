generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User and authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  personas  Persona[]
  posts     Post[]
  jobs      Job[]
  accounts  Account[]
  sessions  Session[]
  insights  Insight[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? // Removed @db.Text for SQLite compatibility
  access_token      String? // Removed @db.Text for SQLite compatibility
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? // Removed @db.Text for SQLite compatibility
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Core voiceprint/persona system
model Persona {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Voiceprint configuration (stored as JSON strings in SQLite)
  tone         String // JSON: ["professional", "casual", "humorous"]
  cadence      String // "concise", "detailed", "conversational"
  donts        String // JSON: ["use corporate speak", "be overly promotional"]
  hookPatterns String // JSON: ["Question hooks", "Contrarian takes", "Personal stories"]
  ctaStyle     String   // "direct", "soft", "question-based"
  
  // Platform-specific settings (stored as JSON string for SQLite compatibility)
  platforms String @default("{}")

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts Post[]
  jobs  Job[]

  @@map("personas")
}

// Content and history tracking
model Post {
  id        String   @id @default(cuid())
  userId    String
  personaId String?
  platform  String   // "twitter", "linkedin", "instagram"
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Platform-specific data (stored as JSON string for SQLite compatibility)
  platformData String @default("{}")
  
  // Analytics
  views        Int @default(0)
  likes        Int @default(0)
  shares       Int @default(0)
  comments     Int @default(0)
  saves        Int @default(0)
  
  // Performance metrics
  engagementRate Float @default(0)
  reachScore     Float @default(0)
  
  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona Persona? @relation(fields: [personaId], references: [id], onDelete: SetNull)

  @@map("posts")
}

// Job processing system
// JobStatus enum converted to String for SQLite compatibility
// Valid values: "QUEUED", "RUNNING", "COMPLETED", "FAILED", "CANCELLED"

// JobType enum converted to String for SQLite compatibility  
// Valid values: "BRAIN_DUMP", "COMPOSE", "REPLY_GENERATION", "ALGO_ANALYSIS", "ACCOUNT_RESEARCH", "AVATAR_GENERATION", "HISTORY_ANALYSIS"

model Job {
  id        String    @id @default(cuid())
  userId    String
  personaId String?
  type      String    // JobType enum converted to String - Valid values: "BRAIN_DUMP", "COMPOSE", "REPLY_GENERATION", "ALGO_ANALYSIS", "ACCOUNT_RESEARCH", "AVATAR_GENERATION", "HISTORY_ANALYSIS"
  status    String    @default("QUEUED") // JobStatus enum converted to String - Valid values: "QUEUED", "RUNNING", "COMPLETED", "FAILED", "CANCELLED"
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Job data (stored as JSON strings for SQLite compatibility)
  input  String
  output String?
  error  String?
  
  // Processing metadata
  attempts   Int     @default(0)
  maxRetries Int     @default(3)
  priority   Int     @default(0)
  
  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona Persona? @relation(fields: [personaId], references: [id], onDelete: SetNull)

  @@map("jobs")
}

// Analytics and insights
model Insight {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "hook_performance", "posting_window", "topic_trend"
  category  String   // "composer", "timing", "engagement"
  data      String   // JSON data stored as string for SQLite compatibility
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("insights")
}

// Content templates and variations
model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   // "hook", "body", "cta", "full_post"
  platform    String   // "twitter", "linkedin", "universal"
  template    String   // The actual template with placeholders
  variables   String   // JSON array stored as string for SQLite compatibility - List of variable names
  tags        String   // JSON array stored as string for SQLite compatibility - For categorization
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("templates")
}

// External account research cache
model AccountProfile {
  id          String   @id @default(cuid())
  platform    String   // "twitter", "linkedin"
  handle      String
  displayName String?
  bio         String?
  followers   Int      @default(0)
  following   Int      @default(0)
  
  // Analysis data (stored as JSON strings for SQLite compatibility)
  topTopics     String   // JSON array of topics
  engagementWith String  // JSON array of handles they frequently engage with
  postingTimes   String  // JSON object for frequency analysis
  
  // Cache metadata
  lastAnalyzed DateTime @default(now())
  createdAt    DateTime @default(now())

  @@unique([platform, handle])
  @@map("account_profiles")
}

