generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User and authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // bcrypt hashed password
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  personas       Persona[]
  posts          Post[]
  jobs           Job[]
  contentUploads ContentUpload[]

  @@map("users")
}

// Core voiceprint/persona system
model Persona {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Voiceprint configuration (simplified for SQLite)
  tone         String   // JSON string of tone array
  cadence      String   // "concise", "detailed", "conversational"
  donts        String   // JSON string of don'ts array
  hookPatterns String   // JSON string of hook patterns array
  ctaStyle     String   // "direct", "soft", "question-based"
  
  // Platform-specific settings (JSON string)
  platforms String @default("{}")

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  posts Post[]
  jobs  Job[]

  @@map("personas")
}

// Content and history tracking
model Post {
  id        String   @id @default(cuid())
  userId    String
  personaId String?
  platform  String   // "twitter", "linkedin", "instagram"
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Platform-specific data (JSON string)
  platformData String @default("{}")
  
  // Analytics
  views        Int @default(0)
  likes        Int @default(0)
  shares       Int @default(0)
  comments     Int @default(0)
  saves        Int @default(0)
  
  // Performance metrics
  engagementRate Float @default(0)
  reachScore     Float @default(0)
  
  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona Persona? @relation(fields: [personaId], references: [id], onDelete: SetNull)

  @@map("posts")
}

// Job processing system (simplified for SQLite)
model Job {
  id        String   @id @default(cuid())
  userId    String
  personaId String?
  type      String   // "BRAIN_DUMP", "COMPOSE", etc.
  status    String   @default("QUEUED") // "QUEUED", "RUNNING", "COMPLETED", "FAILED", "CANCELLED"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Job data (JSON strings)
  input  String
  output String?
  error  String?
  
  // Processing metadata
  attempts   Int     @default(0)
  maxRetries Int     @default(3)
  priority   Int     @default(0)
  
  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  persona Persona? @relation(fields: [personaId], references: [id], onDelete: SetNull)

  @@map("jobs")
}

// Content templates
model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  type        String   // "hook", "body", "cta", "full_post"
  platform    String   // "twitter", "linkedin", "universal"
  template    String   // The actual template with placeholders
  variables   String   // JSON string of variable names
  tags        String   // JSON string for categorization
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("templates")
}

// Content uploads from CSV files
model ContentUpload {
  id           String   @id @default(cuid())
  userId       String
  filename     String
  originalName String
  platform     String   // "twitter", "linkedin", "instagram"
  status       String   @default("PROCESSING") // "PROCESSING", "ANALYZED", "FAILED"
  totalPosts   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Analysis results (JSON string)
  analysis String?
  error    String?

  // Relations
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  analyzedPosts AnalyzedPost[]

  @@map("content_uploads")
}

// Individual posts extracted from uploads
model AnalyzedPost {
  id              String   @id @default(cuid())
  uploadId        String
  content         String
  platform        String
  originalDate    DateTime?
  engagementScore Float    @default(0)
  createdAt       DateTime @default(now())

  // Post metadata (JSON string)
  metadata String @default("{}")

  // Relations
  upload ContentUpload @relation(fields: [uploadId], references: [id], onDelete: Cascade)

  @@map("analyzed_posts")
}